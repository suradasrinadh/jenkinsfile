pipeline{
    
    tools{
    
        maven 'mymaven'
    }
    
    agent any
    
    stages{

        stage('1.CloneRepo')
        {
           
            steps{
                git 'https://github.com/Sonal0409/DevOpsCodeDemo.git'
            }
        }
        stage('2.Compile the code')
        {
             
            steps{
             sh 'mvn compile'
            }
        }
        stage('3.Code Review'){
            steps{
            sh 'mvn pmd:pmd'
            }
        }
        
        stage('4.Unit Testing'){
            steps{
                sh 'mvn test'
            }
            post{
                success{
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('6.Package'){
            steps{
                sh 'mvn package'
                post{
                success(
                jacoco()
                }
            }
        }
    }
}
